section.signup
  h2 START EATING HEALTHY TODAY
  .signup-parent
    for plan in plans
      //- -console.log(plan);
      .signup-child
        .signup-header
          h3 #{plan.name}
          .signup-pricing
            span $ #{plan.price}
            | /month
            p That&rsquo;s only 13.30$ per meal
        .signup-features#plan-booking
          ul
            li
              i.fas.fa-check-circle  
              | #{plan.description}
            li
              i.fas.fa-check-circle  
              | Rating #{plan.ratingsAverage}/#{plan.totalRating}
            li
              i.fas.fa-check-circle  
              | valid for #{plan.duration} days
            li
              i.fas.fa-check-circle  
              | Free delivery
          .signup-button
          if user
            a.btn.btn-full.bookPlan(href="#plan-booking" data-plan-id=`${plan["_id"]}`) I&apos;m hungry
          else
            a.btn.btn-full(href="/login") I&apos;m hungry